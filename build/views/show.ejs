<%- include('./partials/header') -%> 

<div class="ui main text container">
    <div class="ui huge header"><%= foundBlog.title %></div>
    <div class="ui top attached">
        <div class="ui padded segment">
            <img class="ui centered rounded image" src="<%= foundBlog.image %>" alt="<%= foundBlog.title %>" />
            <div class="content">
                <div class="meta">
                    <span><%= foundBlog.date.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- foundBlog.body %></p>
                </div>
                <div class="extra">
                    <a class="ui violet basic button" href="/blogs/<%= foundBlog._id %>/edit">EDIT POST</a>
                    <form class="delete-form" action="/blogs/<%= foundBlog._id %>?_method=DELETE" method="POST">
                        <input class="ui red button basic" type="submit" value="DELETE POST"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') -%> 